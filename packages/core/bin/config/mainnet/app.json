{
    "core": {
        "plugins": [
            {
                "package": "@solar-network/core-logger-pino"
            },
            {
                "package": "@solar-network/core-state"
            },
            {
                "package": "@solar-network/core-database"
            },
            {
                "package": "@solar-network/core-transactions"
            },
            {
                "package": "@solar-network/core-transaction-pool",
                "options": {
                    "maxTransactionsPerRequest": 150,
                    "dynamicFees": {
                        "enabled": false
                    }
                }
            },
            {
                "package": "@foly/helios-transactions"
            },
            {
                "package": "@solar-network/core-p2p",
                "options": {
                    "minimumNetworkReach": 1
                }
            },
            {
                "package": "@solar-network/core-blockchain"
            },
            {
                "package": "@solar-network/core-api",
                "options": {
                    "plugins": {
                        "cache": {
                            "enabled": false
                        },
                        "pagination": {
                            "limit": 250
                        }
                    },
                    "options": {
                        "estimateTotalCount": false
                    }
                }
            },
            {
                "package": "@solar-network/core-webhooks"
            },
            {
                "package": "@solar-network/core-forger"
            }
        ]
    },
    "relay": {
        "plugins": [
            {
                "package": "@solar-network/core-logger-pino"
            },
            {
                "package": "@solar-network/core-state"
            },
            {
                "package": "@solar-network/core-database"
            },
            {
                "package": "@solar-network/core-transactions"
            },
            {
                "package": "@solar-network/core-transaction-pool",
                "options": {
                    "maxTransactionsPerRequest": 150,
                    "dynamicFees": {
                        "enabled": false
                    }
                }
            },
            {
                "package": "@foly/helios-transactions"
            },
            {
                "package": "@solar-network/core-p2p",
                "options": {
                    "minimumNetworkReach": 1
                }
            },
            {
                "package": "@solar-network/core-blockchain"
            },
            {
                "package": "@solar-network/core-api",
                "options": {
                    "cache": {
                        "enabled": false
                    },
                    "pagination": {
                        "limit": 250
                    },
                    "options": {
                        "estimateTotalCount": false
                    }
                }
            },
            {
                "package": "@solar-network/core-webhooks"
            },
            {
                "package": "@foly/socket-event-forwarder",
                "options": {
                    "enabled": false,
                    "port": 3333,
                    "events": [
                        "shutdown",
                        "block.applied",
                        "block.disregarded",
                        "block.forged",
                        "block.received",
                        "block.reverted",
                        "delegate.registered",
                        "delegate.resigned",
                        "forger.failed",
                        "forger.missing",
                        "forger.started",
                        "internal.milestone.changed",
                        "peer.added",
                        "peer.removed",
                        "round.applied",
                        "round.created",
                        "round.missed",
                        "snapshot.start",
                        "snapshot.progress",
                        "snapshot.complete",
                        "stateBuilder.finished",
                        "state.starting",
                        "state.started",
                        "transaction.applied",
                        "transaction.expired",
                        "transaction.forged",
                        "transaction.reverted",
                        "wallet.vote",
                        "wallet.unvote",
                        "wallet.logged.in",
                        "wallet.logged.out",
                        "character.registered"
                    ],
                    "confirmations": [
                        1,
                        2,
                        3,
                        4,
                        5
                    ],
                    "customEvents": [
                        "transaction.confirmed",
                        "systeminformation",
                        "network.latency",
                        "blockheight.current"
                    ],
                    "systeminformationInterval": 5000,
                    "networkLatencyInterval": 10000,
                    "blockheightCurrentInterval": 5000
                }
            }
        ]
    },
    "forger": {
        "plugins": [
            {
                "package": "@solar-network/core-logger-pino"
            },
            {
                "package": "@solar-network/core-transactions"
            },
            {
                "package": "@solar-network/core-forger"
            }
        ]
    },
    "snapshot": {
        "plugins": [
            {
                "package": "@solar-network/core-logger-pino"
            },
            {
                "package": "@solar-network/core-database"
            },
            {
                "package": "@solar-network/core-snapshots"
            }
        ]
    }
}
